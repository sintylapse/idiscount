$color-1= #06bcd4
$color-2= #f5f5f5
$color-3= #dcecee

html
  height 100%
body
  height 100%

h1, h2, h3
	font-weight normal

/*																	FIRST*/
#first
	background url(../images/back.jpg) no-repeat center
	background-size cover
	color white
	min-height 600px
	
	.container
		position relative
		height 100%
	
	.header-menu
		cfix()
		
		.logo
			float left
			font-size 34px
			line-height 70px
			font-family $font-light
		ul
			float right
			margin-left -15px
			margin-right -15px
			
			li
				padding 0px 15px
				display inline-block
				a
					font-size 18px
					display block
					line-height 70px
					
	.void-space
		trans()
		width 100%
		height 30px
		min-height 30px
		
	.main-content
		text-align center
		
		h1
			font-size 34px
			margin-bottom 15px
			font-family $font-light
		p
			font-size 14px
		
		.main-button
			font-family $font-light
			font-size 20px
			display inline-block
			padding 20px 60px
			background $color-1
			border-radius: 50px
			margin-top 35px
			text-shadow: 0px -1px 1px grey
			margin-bottom 40px
	
	.to-bottom
		cursor pointer
		font-size 14px
		text-align center
		position absolute
		width 100%
		bottom 0
		left 0
		padding-bottom 30px
		
		.text
			trans()
			
			margin-bottom 15px
			opacity .5
			
		i.arrow-down
			width 23px
			height 15px
			background url(../images/arrows.png) no-repeat
			background-position -18px 0px
			display block
			
		&:hover .text
			opacity 1

.path-wrap
	position relative
	overflow hidden

#path-line
	trans(1s)
	
	position absolute
	width 2px
	height 100%
	max-height 0px
	top 165px
	left 50%
	margin-left -1px
	background url(../images/path.png) repeat-y

/*											ROWS*/
.landing-rows
	.col-6
		&.left
			float left
			.content-side
				padding-right 30px
			.illustration
				text-align left
				padding-right 30px
		&.right
			float right
			.content-side
				padding-left 30px
			.illustration
				text-align right
				padding-left 30px
				
	.content-side
		margin-top 200px
		max-width 460px
		font-family $font-light
		span
			display inline-block
		
		h2
			color $color-1
			margin-bottom 30px
			font-size 34px
		p
			pmargin-top 20px
			font-size 16px
	
	&#second
		.circle
			trans(.5s)		
	&#second, &#fourth, &#sixth
		.circle
			background-color $color-2
	&#third, &#fiveth
		.circle
			background-color #dcecee
			
	.circle
		transition all 1s cubic-bezier(0.63, 0.07, 0.6, 0.27)
		
		opacity 0
		position absolute
		left 50%; top 50%
		margin-top: -35px;
		margin-left: -35px;
		width: 70px;
		height: 70px;
		background-image url(../images/circle.png)
		background-repeat no-repeat
		background-position center
		
	&.passed .circle
		opacity 1

/*											SECOND */

#second
	background $color-2
	.tag
		text-align center
		
		.tag-title
			text-transform uppercase
			font-family $font-light
			font-size 18px
			margin-top 60px
			margin-bottom 30px
		.tag-icon
			width 30px
			height 45px
			background url(../images/tag.png) no-repeat center
		
	.content-side
		padding-bottom 245px
	.illustration
		padding-top 80px
			
#third
	background $color-3
	.content-side
		padding-bottom 190px
	.illustration
		text-align right 
		padding-top 50px
	
#fourth
	background $color-2
	.content-side
		padding-bottom 170px
	.illustration
		padding-top 120px
		
#fiveth
	background $color-3
	.content-side
		padding-bottom 200px
	.illustration
		padding-top 130px
		
#sixth
	background $color-2
	.content-side
		padding-bottom 220px
	.illustration
		padding-top 140px

/*											SEVENTH */
#seventh
	background url('../images/back1.jpg') no-repeat center
	background-size cover
	padding-bottom 50px
	h2
		text-transform uppercase
		font-family $font-light
		font-size 18px
		margin-top 60px
		margin-bottom 60px
		color white
		text-align center
		
/*											SLIDER */
.slider
	margin-left 40px
	margin-right 40px
	
	.slider-elem
		padding 0px 50px
	
	.inner
		background white
		border-radius 5px
		position relative
		padding 0px 45px
		padding-top 25px
		padding-bottom 20px
		
		.avatar
			position absolute
			top: 15px;
			left: -32px;
			
		.title
			font-size 24px
			color $color-1
			font-family $font-light
			
		.about
			font-size 12px
			margin-top 10px
			color gray
		
		.text	p
			font-family $font-light
			margin-top 25px

	.slick-dots
	  bottom: -30px

	.slick-dots li button:before
	  font-size: 12px
	  color: white
	  opacity: .5

	  &:hover
	    opacity: 1
	  
	.slick-dots li.slick-active button:before
	  color white
	  opacity: 1

	.slick-dots li button:hover:before
	  opacity 1
  
  .slick-prev, .slick-next
  	width 15px
  	height 26px
  	background url(../images/arrows.png) no-repeat
  	&:before
  		content ''
	.slick-prev
		background-position 0 0
		left -35px
	.slick-next
		background-position 0 -26px
		right -35px
	  
/*																		EIGHT */
/*																		PRICES */
#eighth
	background $color-2
	padding-bottom 120px
	
	h2
		text-transform uppercase
		font-family $font-light
		font-size 18px
		margin-top 55px
		margin-bottom 50px
		text-align center
	
	.price-area
		overflow auto
		
	.prices
		cfix()
		min-width 950px
		max-width 1140px
		
	.type-list
		float left
		width 30%
		margin-top 65px
		
		ul
			li
				color gray
				position relative
				padding-left 40px
				
				&:before 
					content: ''
					width 20px
					height 20px
					background url(../images/sprite1.png) no-repeat
					position absolute
					left 0px
					top 50%
					margin-top -8px
					
				.list-border
					padding 15px 0px
					border-top 1px dotted #e7e7e7
					height 50px
				
				&.item-5
					.list-border
						border-bottom 1px dotted #e7e7e7
			
		for i in (1..5)
			li.item-{i}:before
				background-position 0px (-((i - 1)*20))px

					
		
	.tariffs
		float left
		width 70%
		
	.tarif
		text-align center
		float left
		width 25%
		padding 0px 5px
		max-width 170px
		padding-bottom 1px
		
		&.tarif-1
			padding-left 0
		
		li
			padding-top 15px
			padding-bottom 15px
			height 50px
			border-top 1px dotted #f5f5f5  

		i.check
			width 20px
			height 20px
			display block
			background url(../images/sprite1.png) no-repeat
			background-position 0px -100px

		i.fa-times
			color gray
			
		.tarif-inner
			boxShad()
			
			background white
			border-radius: 5px;

		.tarif-title
			font-family $font-light
			margin-bottom 20px
			padding-top 25px
			
		.price-free
			boxShad()
			
			font-family $font-medium
			color $color-1
			font-size 18px
			text-transform uppercase
			padding 13px 5px
			background white
			margin-top 10px
			border-radius 5px
		
		&.tarif-3 .price-cost
			background #4ad5e7
			.month
				border-right 1px solid #75dfed
				
		.price-cost
			cfix()
			boxShad()
			
			color white
			margin-top 10px
			padding 5px 5px
			background $color-1
			text-shadow: 0 -1px 1px #808080;
			font-size 17px
			font-family $font-medium
			border-radius 5px
			
			.month
				float left
				width 50%	
				text-align center
				border-right 1px solid #3dccde
			.year
				float right
				width 50%
				text-align center
			span
				display block
				font-size 12px
				font-family $font-regular
				
/*											FOOTER*/
footer
	background #424242
	padding-bottom 20px
	
	.col-offer
		padding-right 50px
		color white
		
		h2
			margin-top 45px
			font-family $font-light
			font-size 34px
		p
			padding-top 35px
			font-family $font-light
			color #CACACA
			
			a
				color $color-1
			
		.apple-btn, .android-btn
			width 164px
			height 52px
			display inline-block
			margin-top 25px
			
		.apple-btn
				background url(../images/apple-link.png) no-repeat
				margin-right 30px
		.android-btn
			background url(../images/android-link.png) no-repeat
			
		h3
			font-size 24px
			font-family $font-light
			padding-top 35px
			margin-top 35px
			border-top 1px solid #595959
			
		.contacts
			div 
				margin-top 20px
				font-family $font-medium
				display inline-block
				margin-right 30px
				padding-left 35px
				position relative
				
				&:before
					content ''
					background url(../images/sprite2.png) no-repeat
					width 22px
					height 22px
					position absolute
					left 0
					margin-top 2px
				
				span
					color #9e9e9e
					font-size 12px
					margin-right 8px
					
			.phone:before
				background-position -3px -75px
				
			.mail:before
				background-position -5px -99px
		
		.social
			padding-bottom 75px
			padding-top 30px
			a
				margin-right 25px
				width 32px
				height 24px
				background url(../images/sprite2.png) no-repeat
				display inline-block
				
				&.social-vk
					background-position 0px 0px
				&.social-twi
					background-position 0px -24px
				&.social-fb
					background-position 0px -48px
				
	.col-form
		padding-left 50px
		
		
	.commerce-request
		background white
		padding 20px
		border-radius 5px
		padding-top 15px
		margin-top -50px
		
		.form-title
			color $color-1
			font-family $font-medium
			text-transform uppercase
			font-size 18px
			padding-bottom 10px
		
		fieldset
			margin-top 20px
			border-bottom 1px solid #e0e0e0
			padding-bottom 10px
			position relative
		
		label, input[type="text"], textarea
			font-size 16px
			font-family $font-regular
			border 0px

		label
			trans()
			
			position absolute
			left 0; top 10px
			cursor pointer
			font-size 16px
			
			&.active
				font-family $font-medium
				color gray
				font-size 12px
				top -8px

		input[type="text"]
			width 100%
			font-size 16px
			margin 10px 0px
			cursor pointer
			
		textarea
			resize none
			width 100%
			border 0px
			font-size 16px
			margin 10px 0px
			cursor pointer
			
		input[type="submit"]
			background $color-1
			color white
			font-family $font-bold
			border-radius 3px
			text-transform uppercase
			font-size 14px
			text-align center
			width 100%
			padding 20px 10px
			text-shadow: 0 -1px 1px #808080;
			margin-top 20px
		

#tenth
	line-height 30px
	background #212121
	font-size 12px
	color #8b8b8b
	text-align center